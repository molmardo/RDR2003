RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)$ $1.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^([^/]+)/([^/]+)$ $1.php?url=$2 [L]

ErrorDocument 404 ./error
ErrorDocument 404 ./error

<Files 403.shtml>
order allow,deny
allow from all
</Files>